<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:JumpSettingView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:background="@mipmap/default_target_icon"/>

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/edit_pref_bg"
            android:singleLine="true"
            android:gravity="center"
            android:imeOptions="actionDone"
            android:imeActionLabel="完成"
            android:hint="输入名称..."/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="15sp"
            android:textColor="@color/colorBlack"
            android:text="对自己说"/>

        <com.gibbs.target.view.JumpSettingView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            JumpSettingView:name="起止日期" />

        <com.gibbs.target.view.JumpSettingView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            JumpSettingView:name="打卡时间" />

        <com.gibbs.target.view.JumpSettingView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            JumpSettingView:name="提醒时间" />

        <EditText
            android:id="@+id/et_say_self"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="16dp"
            android:gravity="top"
            android:hint="输入对自己的评论..."
            android:background="@drawable/edit_pref_bg" />
    </LinearLayout>

</ScrollView>
